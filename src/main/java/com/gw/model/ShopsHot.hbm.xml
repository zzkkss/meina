<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.gw.model">
	<class
		name="ShopsHot"
		table="shops_hot"
	>
		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<id
			name="Id"
			type="integer"
			column="Id"
		>
			<generator class="native"/>
		</id>

		<property
			name="ShopsId"
			column="shopsId"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="HotSort"
			column="hotSort"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="CityCode"
			column="cityCode"
			type="integer"
			not-null="false"
			length="10"
		/>


	</class>	
</hibernate-mapping>